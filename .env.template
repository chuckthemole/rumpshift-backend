# ==============================================
# MULTI-SERVICE DJANGO CONFIGURATION EXAMPLE
# ==============================================
# Copy this file to .env and fill in your actual values
# Each service can override these with service-specific .env files

# ==============================================
# DJANGO CORE SETTINGS
# ==============================================
DJANGO_SECRET_KEY=your-super-secret-django-key-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Main database credentials
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Service-specific databases
USER_SERVICE_DB_NAME=user_service_db
PRODUCT_SERVICE_DB_NAME=product_service_db
ORDER_SERVICE_DB_NAME=order_service_db

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ==============================================
# SERVICE URLS (Internal Communication)
# ==============================================
USER_SERVICE_URL=http://localhost:8001
PRODUCT_SERVICE_URL=http://localhost:8002
ORDER_SERVICE_URL=http://localhost:8003

# External API Gateway (if using one)
API_GATEWAY_URL=http://localhost:8000

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_LIFETIME=3600
JWT_REFRESH_TOKEN_LIFETIME=86400

# OAuth settings (if using social auth)
GOOGLE_OAUTH2_KEY=your-google-client-id
GOOGLE_OAUTH2_SECRET=your-google-client-secret
GITHUB_KEY=your-github-client-id
GITHUB_SECRET=your-github-client-secret

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-app-password
DEFAULT_FROM_EMAIL=noreply@yourcompany.com

# ==============================================
# FILE STORAGE & MEDIA
# ==============================================
# AWS S3 settings (if using cloud storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-west-2
AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.com

# Local development (comment out if using S3)
MEDIA_URL=/media/
STATIC_URL=/static/

# ==============================================
# THIRD-PARTY SERVICES
# ==============================================
# Payment processing
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Search engine (if using Elasticsearch)
ELASTICSEARCH_DSL_HOST=localhost
ELASTICSEARCH_DSL_PORT=9200
ELASTICSEARCH_DSL_SCHEME=http

# Monitoring & Logging
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==============================================
# API KEYS & EXTERNAL INTEGRATIONS
# ==============================================
# Maps & Location services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# SMS/Notifications
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Push notifications
FIREBASE_SERVER_KEY=your-firebase-server-key

# ==============================================
# DEVELOPMENT & TESTING
# ==============================================
# Debug settings
DJANGO_DEBUG_TOOLBAR=True
DJANGO_EXTENSIONS_ENABLED=True

# Testing database
TEST_DB_NAME=test_db

# Log level
LOG_LEVEL=INFO

# ==============================================
# PRODUCTION OVERRIDES
# ==============================================
# These should be set differently in production
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# ==============================================
# SERVICE-SPECIFIC SETTINGS
# ==============================================
# User Service
USER_SERVICE_PORT=8001
USER_SERVICE_WORKERS=4
USER_AVATAR_MAX_SIZE=5242880  # 5MB in bytes

# Product Service
PRODUCT_SERVICE_PORT=8002
PRODUCT_SERVICE_WORKERS=4
PRODUCT_IMAGE_MAX_SIZE=10485760  # 10MB in bytes
ELASTICSEARCH_INDEX_NAME=products

# Order Service
ORDER_SERVICE_PORT=8003
ORDER_SERVICE_WORKERS=4
ORDER_TIMEOUT_MINUTES=30

# ==============================================
# DOCKER & DEPLOYMENT
# ==============================================
# Docker settings
COMPOSE_PROJECT_NAME=mycompany_services
POSTGRES_VERSION=15
REDIS_VERSION=7-alpine

# ==============================================
# CORS
# ==============================================
# Cors settings
CORS_ALLOW_ALL_ORIGINS=True

# Deployment
DEPLOYMENT_ENV=development
CONTAINER_REGISTRY=your-registry.com/mycompany